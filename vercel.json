{
  "version": 2,
  "headers": [
    {
      "source": "/assets/(.*)",
      "headers": [
        { "key": "Cache-Control", "value": "public, max-age=31536000, immutable" }
      ]
    },
    {
      "source": "/(sw\\.js|service-worker\\.js)",
      "headers": [
        { "key": "Cache-Control", "value": "no-cache, no-store, must-revalidate" }
      ]
    },
    {
      "source": "/(.*)\\.html",
      "headers": [
        { "key": "Cache-Control", "value": "no-cache, must-revalidate" }
      ]
    }
  ],
  "routes": [
    { "handle": "filesystem" },
    { "src": "/sitemap.xml", "dest": "/api/sitemap" },
    { "src": "/(om|sa)/sitemap.xml", "dest": "/api/sitemap" },
    { "src": "/(om|sa)/products-feed.xml", "dest": "/products-feed.xml" },
    { "src": "/(om|sa)/robots.txt", "dest": "/robots.txt" },
    { "src": "/(om|sa)/manifest.webmanifest", "dest": "/manifest.webmanifest" },
    { "src": "/(.*)", "dest": "/api/ssr" }
  ]
}
